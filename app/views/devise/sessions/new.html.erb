<div class="section" style='border: 1px solid black'>
  <div class="columns is-centered" style='border: 1px solid black'>
    <div class="column is-4" style='border: 1px solid red'>
    <h2 style='border: 1px solid black' class='title is-2'>Log in</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field" style='border: 1px solid black'>
        <div class="control">
          <%= f.input :email , input_html: {class:'input'}, label_html: {class:'label'}, wrapper: false, required: false %>
        </div>
      </div>

      <div class="field" style='border: 1px solid black'>
        <div class="control">
          <%= f.input :password , input_html: {class:'input'}, label_html: {class:'label'}, wrapper: false, required: false %>
        </div>
      </div>

      <div class="field" style='border: 1px solid black'>
        <div class="control">
          <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      

      <%= f.button :submit, "Log in" , class: 'button is-info is-medium'%>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    </div>
</div>